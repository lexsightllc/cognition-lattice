#!/usr/bin/env bash
# SPDX-License-Identifier: MPL-2.0
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "${ROOT_DIR}"

bandit -r src

if [[ "${PIP_AUDIT_SKIP:-0}" == "1" ]]; then
  echo "Skipping pip-audit because PIP_AUDIT_SKIP=1" >&2
else
  pip-audit -r requirements.txt "$@"
fi
