#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "${ROOT_DIR}"

FIX_MODE=0
for arg in "$@"; do
  if [[ "$arg" == "--fix" ]]; then
    FIX_MODE=1
  fi
done

if [[ ${FIX_MODE} -eq 1 ]]; then
  ruff check --fix src tests examples
else
  ruff check src tests examples
fi

black --check src tests examples
isort --check-only src tests examples
