#!/usr/bin/env bash
# SPDX-License-Identifier: MPL-2.0
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "${ROOT_DIR}"

OUTPUT_DIR="${ROOT_DIR}/sbom"
mkdir -p "${OUTPUT_DIR}"

cyclonedx-bom --requirements requirements.txt --output "${OUTPUT_DIR}/cognition-lattice-sbom.json" --format json
